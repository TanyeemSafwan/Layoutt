<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="#e6e6ff">


    <ImageButton

        android:id="@+id/imageButton"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:backgroundTint="#e6e6ff"
        android:scaleType="fitStart"
        app:srcCompat="@mipmap/back" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="0dp"
        android:padding="10dp"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#3b5998"
            app:cardCornerRadius="70dp"
            android:layout_margin="5dp">

            <ImageButton
                android:id="@+id/imageButton2"
                android:backgroundTint="#3b5998"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                app:srcCompat="@mipmap/facebook" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="71dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:text="Facebook"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#1DA1F2"
            app:cardCornerRadius="80dp"
            android:layout_margin="5dp"
            >

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#1DA1F2"
                android:scaleType="fitStart"
                app:srcCompat="@mipmap/twitter_1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="71dp"
                android:layout_height="36dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:text="Twitter"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or signup with email"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"

            android:paddingLeft="20dp"

            android:shadowDx="1"
            android:shadowDy="1"
            android:elevation="20dp"
            android:shadowColor="@color/black"
            android:hint="First Name"
            android:inputType="textPersonName" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"

            android:paddingLeft="20dp"

            android:shadowDx="1"
            android:shadowDy="1"
            android:elevation="20dp"
            android:shadowColor="@color/black"
            android:hint="Last Name"
            android:inputType="textPersonName" />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"


            android:elevation="20dp"

            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="40dp">


        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
             />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="2dp"

            android:backgroundTint="@color/white"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/show"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="40dp"
        app:cardBackgroundColor="#4dffff">

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:background="#4dffff"
            android:layout_height="match_parent"
            android:text="Sign Up"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="25dp"
        android:text="By signing up, you agreed with our
Terms of Services and Privacy Policy."
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:paddingLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have account?"
            />

        <Button
            android:id="@+id/button3"
            android:textColor="#00ccff"
            android:background="#e6e6ffjn"
            android:layout_width="20dp"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#e6e6ff"
            android:text="Log in" />
    </LinearLayout>

</LinearLayout>